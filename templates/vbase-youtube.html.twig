{%
  set classes = [
    'v-yt',
    responsive ? 'is-resp',
  ]
%}
<div{{ attributes.addClass(classes) }}>
  <iframe width="{{ width }}" height="{{ height }}" src="https://www.youtube.com/embed/{{ id }}" frameborder="0" allow="autoplay; encrypted-media; gyroscope; picture-in-picture" loading="lazy" allowfullscreen></iframe>
</div>
{% if title %}
  <div class="v-yt-title">{{ title }}</div>
{% endif %}
